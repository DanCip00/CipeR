<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productItemCartSheet"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_carello">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline97"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.73" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.88" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startPrice54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />

    <TextView
        android:id="@+id/productNameCartSheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/titolo_carrello"
        android:fontFamily="@font/opensans_bolditalic"
        android:text="nome del prodotto"
        android:textColor="@color/ciperDarkPurpleSimil"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/numeroOggettiCartSheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483" />

    <TextView
        android:id="@+id/numeroOggettiCartSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/opensans_bold"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/startPrice54"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/startPrice54"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/staticTextOggettiCartSheetProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/static_text_oggetti"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/startPrice54"
        app:layout_constraintStart_toStartOf="@+id/startPrice54"
        app:layout_constraintTop_toBottomOf="@+id/numeroOggettiCartSheet"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/newPriceCartSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="143,55€"
        android:textAlignment="center"
        android:textColor="@color/ciperDarkPurpleSimil"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline16"
        app:layout_constraintStart_toStartOf="@+id/guideline16"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oldPriceCartSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2,45€"
        android:textAlignment="center"
        android:textColor="@color/ciperRed"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/newPriceCartSheet"
        app:layout_constraintEnd_toStartOf="@+id/guideline97"
        app:layout_constraintStart_toStartOf="@+id/guideline97"
        app:layout_constraintTop_toTopOf="@+id/newPriceCartSheet"
        app:layout_constraintVertical_bias="0.59000003" />

</androidx.constraintlayout.widget.ConstraintLayout>