<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Shop_item_prductsheet"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_carello">


    <TextView
        android:id="@+id/shopNameDoveConviene"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/titolo_carrello"
        android:fontFamily="@font/opensans_bolditalic"
        android:text="nome del negozio"
        android:textColor="@color/ciperDarkPurpleSimil"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/distanzaDoveConviene"
        app:layout_constraintStart_toEndOf="@+id/shopIconDoveConviene"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483" />

    <ImageView
        android:id="@+id/shopIconDoveConviene"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:contentDescription="@string/logo_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <Button
        android:id="@+id/addToCartDoveConviene"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_button"
        android:backgroundTint="@color/ciperDarkPurpleSimil"
        android:textSize="8sp"
        app:icon="@drawable/ic_shopping_add_prod"
        app:iconGravity="textTop"
        app:iconPadding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/oldPriceDoveConviene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="2,45€"
        android:textAlignment="center"
        android:textColor="@color/ciperRed"
        android:textSize="11sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/newPriceDoveConviene"
        app:layout_constraintEnd_toStartOf="@+id/startPrice2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8
" />

    <TextView
        android:id="@+id/newPriceDoveConviene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="143,55€"
        android:textAlignment="center"
        android:textColor="@color/ciperDarkPurpleSimil"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addToCartDoveConviene"
        app:layout_constraintStart_toStartOf="@+id/startPrice2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/distanzaDoveConviene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_bold"
        android:text="12"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline43"
        app:layout_constraintStart_toStartOf="@+id/guideline43"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/staticTextKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_bold"
        android:text="Km"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/distanzaDoveConviene"
        app:layout_constraintStart_toStartOf="@+id/distanzaDoveConviene"
        app:layout_constraintTop_toBottomOf="@+id/distanzaDoveConviene" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startPrice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.67" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.52" />

</androidx.constraintlayout.widget.ConstraintLayout>

